<div class="container">
  <section class="hero is-small has-background-primary	">
    <div class="hero-body">
        <h1 class="title has-text-black">
          Welcome to <%= @gym.name %> !
        </h1>
    </div>
  </section>

  <section>
    <strong><%= @gym.before_quote %></strong>
  </section>
  <section>
    Correctly answer <%= @gym.leader_name %>'s <%= @gym.number_of_questions %> questions to win!
  </section>

  <section>
    <strong><%= Trainer.find(current_user.id).name %></strong>
    <img src="<%= Trainer.find(current_user.id).profile_img %>">
    <strong>V.S.</strong>
    <img src="<%= @gym.leader_img %>">
    <strong><%= @gym.leader_name %></strong>
    <img src="<%= @gym.badge_img %>">
  </section>

  <div class="tile is-parent">
     <article class="tile is-child notification is-warning">
       <p class="title"><strong>Question: </strong></p>
       <div class="content">
         <strong><%= @question.question %></strong>
       </div>
     </article>
   </div>

    <div class="tile is-ancestor">
    <div class="tile is-parent">
      <article class="tile is-child box">
        <p class="title"><%= @question.correct_answer %></p>
        <p class="subtitle">Answer Choice 1</p>
      </article>
    </div>
    <div class="tile is-parent">
      <article class="tile is-child box">
        <p class="title"><%= @question.incorrect_answer_1 %></p>
        <p class="subtitle">Answer Choice 2</p>
      </article>
    </div>
    <div class="tile is-parent">
      <article class="tile is-child box">
        <p class="title"><%= @question.incorrect_answer_2 %></p>
        <p class="subtitle">Answer Choice 3</p>
      </article>
    </div>
    <div class="tile is-parent">
      <article class="tile is-child box">
        <p class="title"><%= @question.incorrect_answer_3 %></p>
        <p class="subtitle">Answer Choice 4</p>
      </article>
    </div>
  </div>

  <%= form_for @gym do |f| %>
    <div class="section">
      <%= f.label "Select your answer" %>
      <%= f.select :name, ['1', '2', '3', '4']%>
    </div>

    <div class="section">
      <%= f.submit "Submit Answer" %>
    </div>
  <% end %>

</div>
