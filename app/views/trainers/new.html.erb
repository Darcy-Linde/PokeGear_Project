<h2> Create Account </h2>
<%= form_tag '/trainers/new', method: :post do%>
 <div>
  <%= label_tag :user_name%>
  <%= text_field_tag :user_name%>
 </div>
 <div>
  <%= label_tag :password%>
  <%= text_field_tag :password%>
 </div>

<%= submit_tag 'Sign Up', class: 'btn btn-default'%>
<%end%>


<div class="container">
  <section class="hero is-small has-background-light">
    <div class="hero-body">
        <h1 class="title has-text-black">
          Create A New Trainer
        </h1>
    </div>
  </section>

  <%= form_for @trainer do |f| %>
    <div>
      <%= f.label :name %>
      <div class="control">
          <input class="input" type=<%= f.text_field :name %>
      </div>
    </div>
    <div>
      <%= f.label :bio %>
      <div class="control">
          <input class="input" type=<%= f.text_field :bio %>
      </div>
    </div>
    <div class="section">
      <%= f.label "Select your profile image" %>
      <%= f.select :profile_img, ['Boy', 'Girl']%>
    </div>

    <div>
      <img src="https://archives.bulbagarden.net/media/upload/c/ca/Spr_FRLG_Red.png">
      <img src="https://archives.bulbagarden.net/media/upload/2/2b/Spr_FRLG_Leaf.png">
    </div>

    <div class="section">
      <%= f.submit %>
    </div>
  <% end %>
</div>
