
<div class="container">
  <section class="hero is-small has-background-light">
    <div class="hero-body">
        <h1 class="title has-text-black">
          Create A New Trainer
        </h1>
    </div>
  </section>

  <%= form_for @trainer do |f| %>
    <div>
      <%= f.label :name %>
      <div class="control">
          <input class="input" type=<%= f.text_field :name %>
      </div>
    </div>
    <div>
      <%= f.label :bio %>
      <div class="control">
          <input class="input" type=<%= f.text_field :bio %>
      </div>
    </div>
    <div>
      <%= f.label :password %>
      <div class="control">
          <%= f.password_field :password, class: "input" %>
      </div>
    </div>
    <div class="section">
      <%= f.label "Select your profile image" %>
      <%= f.select :profile_img, ['Red', 'Green', 'Brendan', 'May', 'Youngster','Picnicker', 'Bug Catcher', 'Sage']%>
    </div>



    <div>
      <img src="https://archives.bulbagarden.net/media/upload/c/ca/Spr_FRLG_Red.png">
      <img src="https://archives.bulbagarden.net/media/upload/2/2b/Spr_FRLG_Leaf.png">
      <img src="https://archives.bulbagarden.net/media/upload/6/68/Spr_RS_Brendan.png">
      <img src="https://archives.bulbagarden.net/media/upload/3/38/Spr_RS_May.png">
      <img src="https://archives.bulbagarden.net/media/upload/d/d5/Spr_FRLG_Youngster.png">
      <img src="https://archives.bulbagarden.net/media/upload/a/a0/Spr_FRLG_Picnicker.png">
      <img src="https://archives.bulbagarden.net/media/upload/b/b9/Spr_FRLG_Bug_Catcher.png">
      <img src="https://archives.bulbagarden.net/media/upload/1/12/Spr_E_Spenser.png">
    </div>

    <div class="section">
      <%= f.submit %>
    </div>
  <% end %>
</div>
